[core]
        excludesfile = ~/.gitignore_global
[user]
        name = Jarle Fosen
        email = jarlefosen@gmail.com
[push]
        default = current
[alias]
        d = diff
        b = branch -v
        l = log --pretty=format:'%h : %ar : %an : %s'
        g = log --graph --decorate --pretty=oneline --abbrev-commit --all
        o = log --oneline
        god = diff -- . ':(exclude)vendor/'   # No golang vendor/
        gos = status -- . ':(exclude)vendor/' # No golang vendor/
