# Root project directory.
root = true

# Default configuration for all files in the project

[*]
end_of_line = lf
charset = utf-8

# Use space instead of \t for indentation.
# Insert blank newline at the end of the file.
# Clear whitespace at the end of each line.
[*.{js,java,html}]
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# JS looks best with 2-space indentation.
[*.js]
indent_size  = 2

# Java and HTML looks good with 4-space indentation.
[*.{java,html}]
indent_size  = 4
